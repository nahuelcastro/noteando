<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i><span class="fas fa-edit"></span></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" value="DELETE" name="_method">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">There are no notes yet.</p>
                <a href="/notes/add" class ="btn btn-success btn-block">Create One!</a>
            </div>
        </div>
    {{/each}}
</div>
<div class="row p-2">
    <div class="col-md-1 ml-auto">
        <a href="/notes/add" class="btn btn-primary btn-circle"><i><span class="fas fa-plus"></span></i></a>
    </div>
</div>
